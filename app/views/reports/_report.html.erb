<div id="<%= dom_id report %>">
  <p>
    <strong><%= Report.human_attribute_name(:user_id) %>:</strong>
    <% if User.find(report.user_id).name.present? %>
      <%= User.find(report.user_id).name %>
    <% else %>
      <%= User.find(report.user_id).email %>
    <% end %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:title) %>:</strong>
    <%= report.title %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:content) %>:</strong>
    <%= report.content %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:created_at) %>:</strong>
    <%= report.created_at.to_s(:datetime_jp) %>
  </p>

</div>
