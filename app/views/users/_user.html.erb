<div>
  <p>
    <strong><%= User.human_attribute_name(:name) %>:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:email) %>:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:zipcode) %>:</strong>
    <%= user.zipcode.presence || t('.unregisterd') %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:address) %>:</strong>
    <%= user.address.presence || t('.unregisterd') %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:introduction_text) %>:</strong>
    <%= user.introduction_text.presence || t('.unregisterd') %>
  </p>

</div>
