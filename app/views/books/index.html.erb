<p style="color: green"><%= notice %></p>

<h1><%= t("activerecord.h1.books") %></h1>

<div id="books">
  <% @books.each do |book| %>
    <div>
      <%= render book %>
      <p>
        <%= link_to t("activerecord.link.show"), book %>
      </p>
    </div>
  <% end %>
</div>

<nav>
  <%= link_to t("activerecord.link.new"), new_book_path %>
</nav>
